<?xml version="1.0"?>
<config>
    <modules>
        <IyzicoCheckoutForm_IyzicoCheckoutForm>
            <version>1.1.0</version>
        </IyzicoCheckoutForm_IyzicoCheckoutForm>
    </modules>

    <global>
        <helpers>
            <iyzicocheckoutform>
                <class>IyzicoCheckoutForm_IyzicoCheckoutForm_Helper</class>
            </iyzicocheckoutform>
        </helpers>
		
		<helpers>
		<iyzicocardsave>
                <class>IyzicoCheckoutForm_IyzicoCheckoutForm_Helper</class>
            </iyzicocardsave>
        </helpers>
        <models>
            <iyzicocheckoutform>
                <class>IyzicoCheckoutForm_IyzicoCheckoutForm_Model</class>
                <resourceModel>iyzico_resource</resourceModel>
            </iyzicocheckoutform>
            <iyzico_resource>
                <class>IyzicoCheckoutForm_IyzicoCheckoutForm_Model_Resource</class>
                <entities>
                    <iyziTransactionLog>
                        <table>iyzico_checkout_form_transaction_api_log</table>
                    </iyziTransactionLog>
                </entities>
            </iyzico_resource>
        </models>
		
		<models>
            <iyzicocardsave>
                <class>IyzicoCheckoutForm_IyzicoCheckoutForm_Model</class>
                <resourceModel>iyzico_resource</resourceModel>
            </iyzicocardsave>
            <iyzico_resource>
                <class>IyzicoCheckoutForm_IyzicoCheckoutForm_Model_Resource</class>
                <entities>
                    <iyziCardSaveLog>
                        <table>iyzico_card_save_log</table>
                    </iyziCardSaveLog>
                </entities>
            </iyzico_resource>
        </models>
		
		
        <blocks>
            <iyzicocheckoutform>
                <class>IyzicoCheckoutForm_IyzicoCheckoutForm_Block</class>
            </iyzicocheckoutform>
        </blocks>
        <events>
            <sales_model_service_quote_submit_success>
                <observers>
                    <iyzicocheckoutform_iyzicocheckoutform_success_observer>
                        <type>model</type>
                        <class>IyzicoCheckoutForm_IyzicoCheckoutForm_Model_Success_Observer</class>
                        <method>activateQuote</method>
                    </iyzicocheckoutform_iyzicocheckoutform_success_observer>
                </observers>
            </sales_model_service_quote_submit_success>
            <sales_order_place_after>
                <observers>
                    <iyzicocheckoutform_iyzicocheckoutform_success_observer>
                        <type>model</type>
                        <class>IyzicoCheckoutForm_IyzicoCheckoutForm_Model_Success_Observer</class>
                        <method>salesOrderPlaceAfter</method>
                    </iyzicocheckoutform_iyzicocheckoutform_success_observer>
                </observers>
            </sales_order_place_after>
            <sales_order_payment_cancel>
                <observers>
                    <iyzicocheckoutform_iyzicocheckoutform_sales_order_cancel_observer>
                        <type>model</type>
                        <class>IyzicoCheckoutForm_IyzicoCheckoutForm_Model_Cancel_Observer</class>
                        <method>iyzicoOrderCancel</method>
                    </iyzicocheckoutform_iyzicocheckoutform_sales_order_cancel_observer>
                </observers>
            </sales_order_payment_cancel>
            <sales_order_creditmemo_refund>
                <observers>
                    <iyzicocheckoutform_iyzicocheckoutform_sales_item_refund_observer>
                        <type>model</type>
                        <class>IyzicoCheckoutForm_IyzicoCheckoutForm_Model_Refund_Observer</class>
                        <method>iyzicoItemRefund</method>
                    </iyzicocheckoutform_iyzicocheckoutform_sales_item_refund_observer>
                </observers>
            </sales_order_creditmemo_refund>
        </events>
        <resources>
            <iyzicoinstallment_setup>
                <setup>
                    <module>IyzicoCheckoutForm_IyzicoCheckoutForm</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </iyzicoinstallment_setup>
        </resources>
    </global>

    <frontend>
        <layout>
            <updates>
                <iyzicocheckoutform>
                    <file>iyzicocheckoutform.xml</file>
                </iyzicocheckoutform>
            </updates>
        </layout>
        <translate>
            <modules>
                <IyzicoCheckoutForm_IyzicoCheckoutForm>
                    <files>
                        <default>IyzicoCheckoutForm_IyzicoCheckoutForm.csv</default>
                    </files>
                </IyzicoCheckoutForm_IyzicoCheckoutForm>
            </modules>
        </translate>
    </frontend>

    <adminhtml>
        <layout>
            <updates>
                <iyzicocheckoutform>
                    <file>iyzicocheckoutform.xml</file>
                </iyzicocheckoutform>
            </updates>
        </layout>
        <translate>
            <modules>
                <IyzicoCheckoutForm_IyzicoCheckoutForm>
                    <files>
                        <default>IyzicoCheckoutForm_IyzicoCheckoutForm.csv</default>
                    </files>
                </IyzicoCheckoutForm_IyzicoCheckoutForm>
            </modules>
        </translate>
    </adminhtml>

    <admin>
        <routers>
            <iyzicocheckoutform>
                <use>admin</use>
                <args>
                    <module>IyzicoCheckoutForm_IyzicoCheckoutForm</module>
                    <frontName>iyzicocheckoutform</frontName>
                </args>
            </iyzicocheckoutform>
        </routers>

    </admin>

    <frontend>
        <routers>
            <iyzicocheckoutform>
                <use>standard</use>
                <args>
                    <module>IyzicoCheckoutForm_IyzicoCheckoutForm</module>
                    <frontName>iyzicocheckoutform</frontName>
                </args>
            </iyzicocheckoutform>
        </routers>
    </frontend>

    <default>
        <payment>
            <iyzicocheckoutform_creditcard> 
                <active>0</active>
                <iframe_class>popup</iframe_class>
                <model>iyzicocheckoutform/method_creditcard</model>
                <order_status>pending_payment</order_status>
                <payment_action>authorize</payment_action>
                <title>Kreditkarte</title>
            </iyzicocheckoutform_creditcard>
        </payment>
    </default>

</config>
